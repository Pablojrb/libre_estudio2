<div class="wrapper_wide" id="homec">
<header class="cf">

    <%= link_to root_path, :id => 'logo' do %>
      <span class="textodelgado">LIBRE</span> ESTUDIO
    <% end %>
      <nav class="navu">
        <ul>
          <li><%= link_to "EXPLORA", "#", class:"nav_button"%></li>
          <li> <%= link_to "LOG OUT", destroy_user_session_path, method: :delete, class:"nav_button"%></li>
        </ul>
      </nav>
</header>
</div>
<div class="banner dashboard_banner" >
  <div class="avatar">
    <%=image_tag @user.avatar.url(:medium)%>

  </div>
  <div class="user_overview">
      <p>
        <%= @user.name%> <%= @user.last_name%>
      </p>
      <%unless @user.facebook.blank?%>
        <a href="<%=@user.facebook%>", class=" button_edit">Facebook</a>
      <%end%>
      <%unless @user.instagram.blank?%>
        <a href="<%=@user.instagram%>", class=" button_edit">Instagram</a>
      <%end%>
  </div>
</div>
<div id="links">
  <div class="wrapper_skinny">
    <ul>
      <li><%= link_to "Documentos", root_path%></li>
      <span class="colorgray">/</span>
      <li><%= link_to "Subir Documento",  new_user_document_path( @user ) %></li>
      <span class="colorgray">/</span>
      <li><a href="#" class="current">Account Settings</a></li>
    </ul>
  </div>


<div id="form">
  <div class="wrapper_skinny">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">

        <%= f.text_field :name, autofocus: true, placeholder: "Primer Nombre" %>
      </div>

      <div class="field">
          <%= f.text_field :last_name, placeholder: "Apellido" %>
      </div>

      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
      </div>
      <div class="hr wrapper_wide">
        <span></span>
          Avatar
        <span></span>
      </div>
      <div class="field">
        <%= f.file_field :avatar%>
      </div>
      <div class="hr wrapper_wide">
        <span></span>
          Redes Sociales
        <span></span>
      </div>
      <div class="field">
        <%= f.text_field :facebook, autofocus: true, placeholder: "Facebook Profile" %>
      </div>
      <div class="field">
        <%= f.text_field :instagram, autofocus: true, placeholder: "Instagram Profile" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password (deja el campo en blanco si no quieres cambiar tu password)" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Passwor Confirmation" %>
      </div>

      <div class="field">
        <%= f.password_field :current_password, autocomplete: "off", placeholder: "Current Password (necesitamos tu clave actual para autenticar cambios)" %>
      </div>

      <div class="actions">
        <%= f.submit "Actualizar", class: "button button_highlight button_sing_up "%>
      </div>
    <% end %>
  </div>
</div>
<div class="wrapper_skinny" id="shared_links">
  <%= link_to "Regresar", :back %>
</div>
<div class="terms wrapper_skinny">

</div>

<div class="imgsign-up"> </div>
