<div id="form">
  <div class="wrapper_skinny">
    <%= form_for ([@user, @document]) do |f| %>
    <% if @document.errors.any? %>
        <% @document.errors.messages.values.each do |msg|%>
            <%msg.each do |m|%>
            <div id="notice_wrapper_form">
              <p class="notice"> <%= m %></p>
            </div>
            <%end%>
        <%end%>
    <% end %>
      <div class="field">
        <%= f.text_field :title, placeholder:"Titulo del pdf"%>
      </div>
      <div class="field">
        <%= f.text_area :description, placeholder:"Descripcion del pdf"%>
      </div>
      <div class="field">
        <%= f.file_field :pdf, placeholder:"Sube el PDF"%>
      </div>
      <div class="actions">
        <%= f.submit class: "button button_new button_highlight" %>
      </div>
    <%end%>
  </div>
</div>
